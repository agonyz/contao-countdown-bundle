{
    "name": "agonyz/contao-countdown-bundle",
    "type": "contao-bundle",
    "description": "Adds a simple countdown content element to contao",
    "homepage": "https://github.com/agonyz/contao-countdown-bundle",
    "license": "LGPL-3.0-or-later",
    "keywords": [
        "contao",
        "countdown",
        "date",
        "timer",
        "content element"
    ],
    "authors": [
        {
            "name": "Frank Ficzak",
            "homepage": "https://agonyz.de",
            "email": "dev@agonyz.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/agonyz/contao-countdown-bundle/issues",
        "source": "https://github.com/agonyz/contao-countdown-bundle"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.13"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.5",
        "contao/manager-plugin": "^2.0",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.1"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Agonyz\\ContaoCountdownBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "contao-components/installer": true,
            "contao/manager-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "tools"
        },
        "contao-manager-plugin": "Agonyz\\ContaoCountdownBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "all": [
            "@unit-tests",
            "@ecs",
            "@phpstan"
        ],
        "ecs": "@php tools/ecs/vendor/bin/ecs check src tests --config ecs.php --fix --ansi",
        "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi",
        "unit-tests": "@php vendor/bin/phpunit --colors=always"
    }
}
